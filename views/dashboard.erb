<h2>Robotics Tasks</h2>

<div id="content">
	<section id="add_task">  
	  <form action="/" method="post">  
		<input type="text" name="content" placeholder="Add a task to &quot;Robotics&quot;...">
		<select name="board_id">
			<% @boards.each do |board| %>
				<option value="<%= board.id %>"><%= board.name %></option>
			<% end %>
		</select>
		<input type="submit" value="Add task" style="position: absolute; left: -9999px; width: 1px; height: 1px;">  
	  </form>
	</section>

	<section id="tasks">
		<div id="current">
			<% @boards.each do |board| %>
				<h3><%= board.name %></h3>
				
				<% @tasks.each do |task| %>
					<% if task.complete == false %>
						<% if task.board.id == board.id %>
							<article>
								<div class="levels">
									<span class="level" style="color:<%= task.priority.color %>;"><%= task.priority.level %></span>
								</div>
						
								<div class="task_content">
									<span><a href="/<%= task.id %>/complete">&#8623;</a></span> 
									<h4><a href="/<%= task.id %>"><%= task.content %></a></h4>
								</div>
							</article>
						<% end %>
					<% end %>
				<% end %>
			<% end %>
		</div>
		
		<div id="complete">
			<div>
				<h3 class="hide-show"><a href="#">Completed Tasks</a></h3>
				<span class="hide-show"></span>
			</div>
		
			<% @tasks.each do |task| %>
				<% if task.complete == true %>
					<article class="complete">
						<div class="task_content">
							<span><a href="/<%= task.id %>/complete">&#8623;</a></span> 
							<h4><a href="/<%= task.id %>"><strike><%= task.content %></strike></a></h4>
						</div>
					</article>
				<% end %>
			<% end %>
		</div>
	</section>
</div>